{
    "name": "Fire On Alert",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Fires an order",
    "content_scripts": [
        {
            "matches": ["https://*.zerodha.com/*", "file://*"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "page_action": {
        "default_icon": "icon.png"
    },
    "background": {
    "scripts": ["background.js"]
    }
}