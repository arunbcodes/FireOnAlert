{
    "name": "Fire On Alert",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Fires an order",
    "content_scripts": [
        {
            "matches": ["https://*.zerodha.com/*", "file://*"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "notifications",
        "https://*.zerodha.com/*",
        "file:///*"
    ],
    "content_security_policy": "default-src 'self'",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Fire On Alert"
    },
    "background": {
        "scripts": ["background.js"]
    }
}